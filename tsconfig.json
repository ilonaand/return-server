{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": false,
    "rootDir": ".",
    "outDir": "./dist",
    "sourceMap": true,
    "module": "CommonJS",
    "target": "ES6",
    "lib": ["es2019"],
    "strict": true,                           /* Enable all strict type-checking options. */
    "esModuleInterop": true,       
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*", "src/tests/**/*", "config/*"]
}
